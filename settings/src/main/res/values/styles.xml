<resources>

    <style name="Template.Settings.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <!-- Have to customize each component we use -->
        <item name="preferenceStyle">@style/Template.Settings.PreferenceStyle</item>
        <item name="preferenceCategoryStyle">@style/Template.Settings.PreferenceCategoryStyle</item>
    </style>

    <style name="Template.Settings.PreferenceStyle" parent="Preference.Material">
        <!-- We handle all persistence logic ourselves -->
        <item name="persistent">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <!-- Have to copy-paste -->
    <style name="Template.Settings.PreferenceCategoryStyle" parent="Preference.Category.Material">
        <item name="persistent">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>
</resources>
